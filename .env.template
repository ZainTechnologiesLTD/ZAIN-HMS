# ZAIN HMS Environment Configuration Template
# Development: Copy to .env for local development
# Production: Copy to .env and configure production values

# ==========================================
# ENVIRONMENT TYPE
# ==========================================
ENVIRONMENT=development  # Options: development, production

# ==========================================
# CORE DJANGO SETTINGS
# ==========================================
SECRET_KEY=your-secret-key-change-in-production
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# ==========================================
# DATABASE CONFIGURATION
# ==========================================
# Development (SQLite) - Default for development
DB_ENGINE=sqlite3
DB_NAME=db.sqlite3
DB_USER=
DB_PASSWORD=
DB_HOST=
DB_PORT=

# Production (PostgreSQL) - Uncomment and configure for production
# DB_ENGINE=postgresql
# DB_NAME=zain_hms_production
# DB_USER=zain_hms_user
# DB_PASSWORD=your-strong-database-password
# DB_HOST=localhost
# DB_PORT=5432

# ==========================================
# REDIS & CELERY CONFIGURATION
# ==========================================
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=
CELERY_BROKER_URL=redis://localhost:6379/3
CELERY_RESULT_BACKEND=redis://localhost:6379/3

# ==========================================
# EMAIL CONFIGURATION
# ==========================================
EMAIL_HOST=
EMAIL_PORT=587
EMAIL_HOST_USER=
EMAIL_HOST_PASSWORD=
EMAIL_USE_TLS=True
DEFAULT_FROM_EMAIL=noreply@your-domain.com

# ==========================================
# SECURITY SETTINGS
# ==========================================
DATA_ENCRYPTION_KEY=generate-with-fernet-key-generate
ADMIN_URL=admin/  # Change for production: secure-admin-xyz123/
CSRF_TRUSTED_ORIGINS=http://localhost:8000,http://127.0.0.1:8000

# ==========================================
# SSL/HTTPS CONFIGURATION
# ==========================================
USE_HTTPS=False  # Set to True in production
SECURE_SSL_REDIRECT=False  # Set to True in production
SESSION_COOKIE_SECURE=False  # Set to True in production
CSRF_COOKIE_SECURE=False  # Set to True in production

# ==========================================
# LOGGING & DEBUGGING
# ==========================================
LOG_LEVEL=INFO  # Options: DEBUG, INFO, WARNING, ERROR
DJANGO_LOG_LEVEL=INFO

# ==========================================
# FILE STORAGE
# ==========================================
MEDIA_ROOT=media/  # Development path
STATIC_ROOT=staticfiles/  # Development path

# Production paths (uncomment for production):
# MEDIA_ROOT=/var/www/zain_hms/media/
# STATIC_ROOT=/var/www/zain_hms/static/

# AWS S3 Storage (Optional for production)
# AWS_ACCESS_KEY_ID=your_aws_access_key
# AWS_SECRET_ACCESS_KEY=your_aws_secret_key
# AWS_STORAGE_BUCKET_NAME=zain-hms-media
# AWS_S3_REGION_NAME=us-east-1
# USE_S3=False

# ==========================================
# HEALTHCARE COMPLIANCE
# ==========================================
HIPAA_COMPLIANCE=True
AUDIT_LOGGING=True
PHI_ENCRYPTION=True
DATA_RETENTION_DAYS=2555  # 7 years for medical records

# ==========================================
# PERFORMANCE SETTINGS
# ==========================================
DATABASE_POOL_SIZE=10
CACHE_TIMEOUT=300
SESSION_COOKIE_AGE=3600  # 1 hour
CONN_MAX_AGE=60

# ==========================================
# MONITORING & ALERTS
# ==========================================
# Sentry Error Tracking (Optional)
# SENTRY_DSN=your_sentry_dsn_url
# SENTRY_ENVIRONMENT=development

# ==========================================
# BACKUP CONFIGURATION
# ==========================================
BACKUP_ENABLED=True
BACKUP_LOCATION=backups/  # Development path
# BACKUP_LOCATION=/backups/zain_hms/  # Production path

# ==========================================
# MULTITENANT SUPPORT
# ==========================================
MULTITENANT_ENABLED=True
DEFAULT_HOSPITAL_ID=1

# ==========================================
# API & AUTHENTICATION
# ==========================================
API_RATE_LIMIT=100/hour
JWT_EXPIRY_HOURS=24
API_VERSION=v1

# ==========================================
# DEVELOPMENT TOOLS
# ==========================================
# Django Debug Toolbar (Development only)
DEBUG_TOOLBAR=True  # Set to False in production

# ==========================================
# PRODUCTION OVERRIDES
# ==========================================
# When ENVIRONMENT=production, override these settings:
# DEBUG=False
# ALLOWED_HOSTS=your-domain.com,www.your-domain.com,api.your-domain.com
# DB_ENGINE=postgresql
# USE_HTTPS=True
# SECURE_SSL_REDIRECT=True
# SESSION_COOKIE_SECURE=True
# CSRF_COOKIE_SECURE=True
# DEBUG_TOOLBAR=False
# CSRF_TRUSTED_ORIGINS=https://your-domain.com,https://www.your-domain.com