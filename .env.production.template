# üè• ZAIN HMS Production Environment Configuration Template
# Copy this file to .env.prod and fill in your actual production values

# ============================================
# CRITICAL SECURITY SETTINGS
# ============================================

# Django Secret Key (MUST be 50+ characters, unique, and secret)
SECRET_KEY=your-super-secret-django-key-here-must-be-50-characters-long-and-unique-123456789

# Environment (production, staging, development)
ENVIRONMENT=production

# Debug mode (MUST be False in production)
DEBUG=False

# Allowed hosts (comma-separated list of domains/IPs)
ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com,localhost,127.0.0.1

# Main domain for the application
MAIN_DOMAIN=yourdomain.com

# ============================================
# DATABASE CONFIGURATION (PostgreSQL)
# ============================================

# PostgreSQL Database Settings
DB_NAME=zain_hms
DB_USER=zain_hms_user
DB_PASSWORD=your-very-secure-database-password-123
DB_HOST=db
DB_PORT=5432

# ============================================
# CACHE CONFIGURATION (Redis)
# ============================================

# Redis Cache Settings
REDIS_PASSWORD=your-secure-redis-password-123
REDIS_URL=redis://:your-secure-redis-password-123@redis:6379/0

# ============================================
# EMAIL CONFIGURATION
# ============================================

# Email Backend Settings
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-specific-password
EMAIL_USE_TLS=True

# ============================================
# SECURITY CONFIGURATION
# ============================================

# SSL/HTTPS Settings
SECURE_SSL_REDIRECT=True
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=True
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True

# Email Configuration
EMAIL_HOST=smtp.your-provider.com
EMAIL_HOST_USER=your-email@yourdomain.com
EMAIL_HOST_PASSWORD=your-email-password
EMAIL_PORT=587
EMAIL_USE_TLS=True
DEFAULT_FROM_EMAIL=noreply@yourdomain.com

# File Storage
MEDIA_ROOT=/var/www/zain_hms/media/
STATIC_ROOT=/var/www/zain_hms/static/

# Optional: Admin URL customization for security
ADMIN_URL=secure-admin-path/

# Optional: External services
OPENAI_API_KEY=your-openai-api-key-if-needed
TWILIO_ACCOUNT_SID=your-twilio-sid-if-needed
TWILIO_AUTH_TOKEN=your-twilio-token-if-needed

# Monitoring & Logging
SENTRY_DSN=your-sentry-dsn-for-error-monitoring