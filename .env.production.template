# ZAIN HMS Production Environment Template
# Copy this file to .env.production and fill in your production values
# This file is used when ENVIRONMENT=production

# Environment Configuration
ENVIRONMENT=production
DEBUG=False

# Security Settings (REQUIRED)
SECRET_KEY=your-super-secure-secret-key-here-50-chars-minimum
ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com,your-ip-address
MAIN_DOMAIN=yourdomain.com

# Database Configuration
DB_NAME=zain_hms_prod
DB_USER=zain_hms_user
DB_PASSWORD=secure-database-password
DB_HOST=localhost
DB_PORT=3306

# Redis Cache Configuration
REDIS_CACHE_URL=redis://127.0.0.1:6379/1

# SSL/HTTPS Settings
SECURE_SSL_REDIRECT=True
SECURE_HSTS_SECONDS=31536000

# Session Configuration
SESSION_COOKIE_AGE=3600

# Email Configuration
EMAIL_HOST=smtp.your-provider.com
EMAIL_HOST_USER=your-email@yourdomain.com
EMAIL_HOST_PASSWORD=your-email-password
EMAIL_PORT=587
EMAIL_USE_TLS=True
DEFAULT_FROM_EMAIL=noreply@yourdomain.com

# File Storage
MEDIA_ROOT=/var/www/zain_hms/media/
STATIC_ROOT=/var/www/zain_hms/static/

# Optional: Admin URL customization for security
ADMIN_URL=secure-admin-path/

# Optional: External services
OPENAI_API_KEY=your-openai-api-key-if-needed
TWILIO_ACCOUNT_SID=your-twilio-sid-if-needed
TWILIO_AUTH_TOKEN=your-twilio-token-if-needed

# Monitoring & Logging
SENTRY_DSN=your-sentry-dsn-for-error-monitoring