# ZAIN HMS Environment Configuration
# Copy this file to .env and update the values

# Security
SECRET_KEY=django-insecure-change-this-in-production-zain-hms-secret-key-2025
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0

# Database Configuration (SQLite for development)
# Uncomment below for PostgreSQL in production
# DB_NAME=zain_hms
# DB_USER=postgres
# DB_PASSWORD=password
# DB_HOST=localhost
# DB_PORT=5432

# Redis Configuration (Optional)
REDIS_URL=redis://127.0.0.1:6379/0

# Email Configuration
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
DEFAULT_FROM_EMAIL=noreply@zainhms.com

# File Upload Settings
MAX_UPLOAD_SIZE=10485760  # 10MB in bytes

# Session Settings
SESSION_COOKIE_AGE=86400  # 24 hours

# Celery Configuration (Optional)
CELERY_BROKER_URL=redis://127.0.0.1:6379/0
CELERY_RESULT_BACKEND=redis://127.0.0.1:6379/1

# Backup Settings
BACKUP_DIR=backups/
AUTO_BACKUP=True

# Logging
LOG_LEVEL=DEBUG
LOG_FILE=logs/zain_hms.log

# Third-party Integrations (Optional)
# TWILIO_ACCOUNT_SID=your-twilio-sid
# TWILIO_AUTH_TOKEN=your-twilio-token
# TWILIO_PHONE_NUMBER=+1234567890

# WhatsApp API (Optional)
# WHATSAPP_API_KEY=your-whatsapp-api-key
# WHATSAPP_API_URL=https://api.whatsapp.com/send
